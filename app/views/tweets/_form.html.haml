= form_for @tweet do |f|
  -if @tweet.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tweet.errors.count, "error")} prohibited this tweet from being saved:"
      %ul
        - @tweet.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :tweet_id
    = f.text_field :tweet_id
  .field
    = f.label :text
    = f.text_field :text
  .field
    = f.label :posted_at
    = f.datetime_select :posted_at
  .actions
    = f.submit 'Save'
